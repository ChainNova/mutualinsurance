<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/widget_request_img"
        android:layout_width="96dp"
        android:layout_height="96dp"

        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/widget_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/alert_no_internet"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/widget_body_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/alert_check_internet"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/widget_refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/widget_request_fail_refresh_frame"
        android:padding="2dp"
        android:text="@string/alert_no_internet_refresh"
        android:textColor="@color/black"
        android:textSize="15sp"/>

</LinearLayout>